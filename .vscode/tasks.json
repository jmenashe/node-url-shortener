
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gulp Build",
            "type": "shell",
            "command": "gulp",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "type": "eslint",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "label": "eslint: lint whole folder",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}